<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_cloud_guide">

    <include
        layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_48dip"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.yydcdut.note.view.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_colorNormal="@color/purple_colorPrimaryDark"
                app:fab_colorPressed="?attr/colorPrimaryDark"
                app:fab_icon="@drawable/ic_person_info_qq"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="3dip"
            card_view:cardElevation="5dip"
            card_view:cardUseCompatPadding="true">

            <com.yydcdut.note.view.ripple.MaterialRippleLayout
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="#585858"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="false">

                <Button
                    android:id="@+id/btn_login_qq"
                    android:layout_width="200dip"
                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_person_info_qq"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="QQ"
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/txt_mid"/>
            </com.yydcdut.note.view.ripple.MaterialRippleLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="3dip"
            card_view:cardElevation="5dip"
            card_view:cardUseCompatPadding="true">

            <com.yydcdut.note.view.ripple.MaterialRippleLayout
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="#585858"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="false">

                <Button
                    android:id="@+id/btn_login_evernote"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_person_info_elephant"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="Sina"
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/txt_mid"/>
            </com.yydcdut.note.view.ripple.MaterialRippleLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <com.yydcdut.note.view.CircleProgressBarLayout
        android:id="@+id/layout_progress"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone">
    </com.yydcdut.note.view.CircleProgressBarLayout>

</RelativeLayout>

